@using XBCADAttendance.Models.ViewModels
@model AdminViewModel
@{
    Layout = "_AdminLayout";
}

<div class="head-title">
    <div class="left">
        <h1>Users</h1>
        <ul class="breadcrumb">
            <li><a href="#">Home</a></li>
            <li><i class='bx bx-chevron-right'></i></li>
            <li><a class="active" href="#">Users</a></li>
        </ul>
    </div>
</div>

<div class="table-data">
    <div class="order">
        <table id="userTable">
            <thead>
                <tr>
                    <th class="ree">ID</th>
                    <th class="ree">Name</th>
                    <th class="ree">Password</th>
                    <th class="ree">Role</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model.Users)
                {
                    <tr data-id="@Model.GetID(user)" class="user-row">
                        <td>@Model.GetID(user)</td>
                        <td>@user.UserName</td>
                        <td>••••••</td>
                        <td class="role-display">@Model.GetRole(user)</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Modal for Updating User Info -->
<div class="modal fade" id="userModal" tabindex="-1" aria-labelledby="userModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="userModalLabel">Update User Info</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="userForm">
                    <input type="hidden" id="userId" />
                    <div class="mb-3">
                        <label for="userName" class="form-label">Name</label>
                        <input type="text" class="form-control" id="userName" required />
                    </div>
                    <div class="mb-3">
                        <label for="userRole" class="form-label">Role</label>
                        <select class="form-control" id="userRole" required>
                            @if (Model.lstRoles != null)
                            {
                                foreach (var role in Model.lstRoles)
                                {
                                    <option value="@role.RoleName">@role.RoleName</option> <!-- Set the value attribute for the dropdown -->
                                }
                            }
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="userPassword" class="form-label">Password</label>
                        <input type="password" class="form-control" id="userPassword" required />
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn" style="background-color: var(--light-blue); color: var(--blue);" id="updateUser">Update</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Handle row click to populate modal
            $('.user-row').on('click', function () {
                const userId = $(this).data('id');
                const userName = $(this).find('td:nth-child(2)').text().trim();
                const userRole = $(this).find('td:nth-child(4)').text().trim();

                $('#userId').val(userId);
                $('#userName').val(userName);
                $('#userRole').val(userRole); // This line should correctly set the selected role
                $('#userModal').modal('show');
            });

            // Handle update user
            $('#updateUser').on('click', function () {
                // Implement your AJAX update logic here
                const userId = $('#userId').val(); // Get the selected user's ID
                const userName = $('#userName').val();
                const userRole = $('#userRole').val(); // Capture selected role
                const userPassword = $('#userPassword').val();

                // Example AJAX call
                $.ajax({
                    url: '/Admin/UpdateUsers', // Ensure this URL matches your route
                    type: 'POST',
                    data: {
                        Id: userId,           // Send the user ID
                        UserName: userName,   // Send the user name
                        Role: userRole,       // Send the selected role
                        Password: userPassword // Send the password
                    },
                    success: function (response) {
                        // Handle success
                        $('#userModal').modal('hide');
                        location.reload();
                        // Optionally, refresh the table or show a success message
                    },
                    error: function (xhr, status, error) {
                        // Handle error

                    }
                });
            });
        });
    </script>
}

